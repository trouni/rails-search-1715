<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-8">
      <%= form_with url: movies_path, method: :get, class: "d-flex my-3" do %>
        <%= text_field_tag :q, params[:q], class: "form-control" %>
      <% end %>
      <div id="movies">
        <% if @movies.any? %>
          <% @movies.each do |movie| %>
            <h4><%= movie.title %></h4>
            <p><%= movie.synopsis %></p>
          <% end %>
        <% else %>
          <em>Sorry, no movies found.</em>
        <% end %>
      </div>
    </div>
  </div>
</div>